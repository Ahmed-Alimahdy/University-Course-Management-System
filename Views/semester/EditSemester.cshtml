@model universityManagementSys.Models.Semester

@{
    ViewData["Title"] = "Edit Semester";
}

<div class="container mt-5">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">✏️ Edit Semester</h1>
        <p class="text-muted">Update the semester details below.</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <form asp-action="EditSemester" method="post">
                        <input type="hidden" asp-for="ID" />

                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Start Date -->
                        <div class="mb-3">
                            <label asp-for="StartDate" class="form-label fw-semibold"></label>
                            <input asp-for="StartDate" type="date" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <!-- End Date -->
                        <div class="mb-3">
                            <label asp-for="EndDate" class="form-label fw-semibold"></label>
                            <input asp-for="EndDate" type="date" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="GetAllSemesters"
                               class="btn btn-outline-secondary px-4 rounded-pill shadow-sm">
                                ⬅️ Cancel
                            </a>
                            <button type="submit"
                                    class="btn btn-primary px-4 rounded-pill shadow-sm">
                                💾 Update Semester
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
