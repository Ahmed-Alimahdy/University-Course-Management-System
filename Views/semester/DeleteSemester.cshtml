@model universityManagementSys.Models.Semester

@{
    ViewData["Title"] = "Delete Semester";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-danger">🗑️ Delete Semester</h1>
        <p class="text-muted">Are you sure you want to delete this semester?</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Card -->
    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">ID</dt>
                <dd class="col-sm-9">@Model.ID</dd>

                <dt class="col-sm-3 fw-semibold">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-semibold">Start Date</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3 fw-semibold">End Date</dt>
                <dd class="col-sm-9">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
            </dl>

            <!-- Action buttons -->
            <form asp-action="DeleteSemesterConfirmed" method="post" class="mt-4">
                <input type="hidden" asp-for="ID" />
                <div class="d-flex justify-content-between">
                    <a asp-action="GetAllSemesters"
                       class="btn btn-outline-secondary px-4 rounded-pill shadow-sm">
                        ⬅️ Cancel
                    </a>
                    <button type="submit"
                            class="btn btn-danger px-4 rounded-pill shadow-sm">
                        🗑️ Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
