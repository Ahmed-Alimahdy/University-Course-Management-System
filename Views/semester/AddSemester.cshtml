@model universityManagementSys.ModelView.dataViewModel

@{
    ViewData["Title"] = "Add Semester";
}

<div class="container mt-5">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-success">➕ Add Semester</h1>
        <p class="text-muted">@Model.WelcomeMessage</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Success Message -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">
            @TempData["Success"]
        </div>
    }

    <!-- Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <form asp-action="AddSemester" method="post">
                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="semester.Name" class="form-label fw-semibold"></label>
                            <input asp-for="semester.Name" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="semester.Name" class="text-danger"></span>
                        </div>

                        <!-- Start Date -->
                        <div class="mb-3">
                            <label asp-for="semester.StartDate" class="form-label fw-semibold"></label>
                            <input asp-for="semester.StartDate" type="date" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="semester.StartDate" class="text-danger"></span>
                        </div>

                        <!-- End Date -->
                        <div class="mb-3">
                            <label asp-for="semester.EndDate" class="form-label fw-semibold"></label>
                            <input asp-for="semester.EndDate" type="date" class="form-control rounded-pill shadow-sm" />
                            <span asp-validation-for="semester.EndDate" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="GetAllSemesters"
                               class="btn btn-outline-secondary px-4 rounded-pill shadow-sm">
                                ⬅️ Cancel
                            </a>
                            <button type="submit"
                                    class="btn btn-success px-4 rounded-pill shadow-sm">
                                ✅ Add Semester
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
