@model List<Semester>
@{
    ViewData["Title"] = "All semesters";
}
<h2>All semesters</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">
        @ViewBag.NoDataMessage ?? "No Semesters available."
    </div>
}
else{
    <table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>StartDate</th>
            <th>EndDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var semester in Model)
        {
            <tr>
                <td>@semester.ID</td>
                <td>@semester.Name</td>
                    <td>@semester.StartDate.ToString("yyyy-MM-dd")</td>
                    <td>@semester.EndDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@semester.ID">Edit</a>
                        </td>
                        <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@semester.ID">Delete</a>
                </td>
            </tr>

        }
    </tbody>
	</table>
}