@model List<Semester>

@{
    ViewData["Title"] = "All Semesters";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">📅 All Semesters</h1>
        <p class="text-muted">Manage academic semesters in the system.</p>
        <hr class="w-25 mx-auto" />
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center shadow-sm">
            @ViewBag.NoDataMessage ?? "No Semesters available."
        </div>
    }
    else
    {
        <!-- Table -->
        <div class="card shadow-lg border-0">
            <div class="card-body">
                <table class="table table-hover table-bordered align-middle text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Start Date</th>
                            <th>End Date</th>
                            <th colspan="2">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var semester in Model)
                        {
                            <tr>
                                <td>@semester.ID</td>
                                <td>@semester.Name</td>
                                <td>@semester.StartDate.ToString("yyyy-MM-dd")</td>
                                <td>@semester.EndDate.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@semester.ID"
                                       class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        ✏️ Edit
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@semester.ID"
                                       class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                        🗑️ Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <!--buttons -->
    <div class="text-center mt-4">
        <a asp-action="AddView" asp-controller="Semester"
           class="btn btn-success px-4 py-2 rounded-pill shadow-sm me-3">
            ➕ Add Semester
        </a>

        <a asp-action="AdminDashBoard" asp-controller="Account"
           class="btn btn-outline-secondary px-4 py-2 rounded-pill shadow-sm">
            ⬅️ Back to Dashboard
        </a>
    </div>
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: #f1f7ff;
        }
    </style>
}
