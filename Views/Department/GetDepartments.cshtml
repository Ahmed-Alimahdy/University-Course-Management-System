@model IEnumerable<universityManagementSys.Models.Department>

@{
    ViewData["Title"] = "All Departments";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">🏢 All Departments</h1>
        <p class="text-muted">Manage university departments.</p>
        <hr class="w-25 mx-auto" />
    </div>

    @if (ViewBag.NoDataMessage != null || Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center shadow-sm">
            @ViewBag.NoDataMessage ?? "No Departments available."
        </div>
    }
    else
    {
        <!-- Table -->
        <div class="card shadow-lg border-0">
            <div class="card-body">
                <table class="table table-hover table-bordered align-middle text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th colspan="3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dept in Model)
                        {
                            <tr>
                                <td>@dept.ID</td>
                                <td>@dept.Name</td>
                                <td>@dept.Description</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@dept.ID"
                                       class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        ✏️ Edit
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@dept.ID"
                                       class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                        🗑️ Delete
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@dept.ID"
                                       class="btn btn-sm btn-outline-success rounded-pill px-3">
                                        👀 Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }

    <!-- Always visible buttons -->
    <div class="text-center mt-4">
        <a asp-action="Create" asp-controller="Department"
           class="btn btn-success px-4 py-2 rounded-pill shadow-sm me-3">
            ➕ Add Department
        </a>

        <a asp-action="AdminDashBoard" asp-controller="Account"
           class="btn btn-outline-secondary px-4 py-2 rounded-pill shadow-sm">
            ⬅️ Back to Dashboard
        </a>
    </div>
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: #f1f7ff;
        }
    </style>
}
