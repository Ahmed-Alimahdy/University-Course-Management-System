@model universityManagementSys.ViewModel.AssignRoleViewModel

@{
    ViewData["Title"] = "Assign Role";
}

<div class="container mt-5">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">🔑 Assign Role</h1>
        <p class="text-muted">Choose a user and assign them a role.</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success shadow-sm rounded-pill text-center fw-semibold">
            ✅ @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger shadow-sm rounded-pill text-center fw-semibold">
            ⚠️ @TempData["Error"]
        </div>
    }

    <!-- Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <form asp-action="AssignRole" method="post">
                        <!-- User Selection -->
                        <div class="mb-3">
                            <label asp-for="UserId" class="form-label fw-semibold">Select User</label>
                            <select asp-for="UserId" class="form-select rounded-pill shadow-sm">
                                <option value="">-- Choose User --</option>
                                @foreach (var user in Model.AvailableUsers)
                                {
                                    <option value="@user.Id">@user.UserName (@user.Email)</option>
                                }
                            </select>
                            <span asp-validation-for="UserId" class="text-danger"></span>
                        </div>

                        <!-- Role Selection -->
                        <div class="mb-3">
                            <label asp-for="SelectedRole" class="form-label fw-semibold">Select Role</label>
                            <select asp-for="SelectedRole" class="form-select rounded-pill shadow-sm">
                                <option value="">-- Choose Role --</option>
                                @foreach (var role in Model.AvailableRoles)
                                {
                                    <option value="@role">@role</option>
                                }
                            </select>
                            <span asp-validation-for="SelectedRole" class="text-danger"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-controller="Account"
                               asp-action="AdminDashBoard"
                               class="btn btn-outline-secondary px-4 rounded-pill shadow-sm">
                                ⬅️ Back to Dashboard
                            </a>
                            <button type="submit"
                                    class="btn btn-primary px-4 rounded-pill shadow-sm">
                                🔑 Assign Role
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
