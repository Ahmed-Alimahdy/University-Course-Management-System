@model universityManagementSys.Models.Student

@{
    ViewData["Title"] = "Student Profile";
}

<div class="container mt-5">

    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">🎓 Student Profile</h1>
        <p class="text-muted">View your personal details and enrolled courses.</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Profile Card -->
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-body p-4">

            <div class="row align-items-center">
                <!-- Left: Profile picture -->
                <div class="col-md-4 text-center">
                    <h4 class="fw-bold">@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">🆔 ID: @Model.ID</p>
                </div>

                <!-- Right: Info table -->
                <div class="col-md-8">
                    <table class="table table-hover table-bordered align-middle">
                        <tbody>
                            <tr>
                                <th class="table-primary">📧 Email</th>
                                <td>@Model.Email</td>
                            </tr>
                            <tr>
                                <th class="table-primary">📞 Phone Number</th>
                                <td>@Model.PhoneNum</td>
                            </tr>
                            <tr>
                                <th class="table-primary">🏫 Department</th>
                                <td>@Model.Department?.Name</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Courses Section -->
            <hr/>
            <h4 class="fw-bold mt-4 text-secondary">📘 My Courses</h4>

            @if (Model.Enrollments != null && Model.Enrollments.Any())
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-striped text-center mt-3">
                        <thead class="table-primary">
                            <tr>
                                <th>Course ID</th>
                                <th>Course Name</th>
                                <th>Credits</th>
                                <th>Grade</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var enrollment in Model.Enrollments)
                            {
                                <tr>
                                    <td>@enrollment.Course.ID</td>
                                    <td>@enrollment.Course.Name</td>
                                    <td>@enrollment.Course.CreditHours</td>
                                    <td>@enrollment.Grade</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mt-3">You are not enrolled in any courses yet.</p>
            }


        <div class="mt-3">
            <a asp-action="GetIDProfile" asp-route-id="@Model.ID" class="btn btn-primary">Edit Profile</a>
            <a asp-controller="Account" asp-action="AssignCourseToStudent" asp-route-id="@Model.ID" class="btn btn-primary">
                Assign Course
            </a>
            <a asp-action="Logout" class="btn btn-danger">Logout</a>

            <!-- Action Buttons -->
            <div class="text-center mt-4">
                <a asp-action="EditProfile" asp-route-id="@Model.ID"
                   class="btn btn-outline-primary rounded-pill px-4 shadow-sm me-2">
                    ✏️ Edit Profile
                </a>

                <a asp-action="AssignCourseToStudentProfile" asp-route-id="@Model.ID"
                   class="btn btn-outline-success rounded-pill px-4 shadow-sm me-2">
                    ➕ Assign Course
                </a>

                <a asp-action="Logout"
                   class="btn btn-outline-danger rounded-pill px-4 shadow-sm">
                    🚪 Logout
                </a>
            </div>

        </div>
    </div>
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: #f9faff;
        }
    </style>
}
