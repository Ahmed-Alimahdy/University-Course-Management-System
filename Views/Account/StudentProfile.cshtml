@model universityManagementSys.Models.Student

@{
    ViewData["Title"] = "Student Profile";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-3">
        <h2 class="text-center mb-4">Student Profile</h2>
        <hr />

        <div class="row">
            <div class="col-md-4 text-center">
                <img src="~/images/student-default.png" alt="Profile Picture"
                     class="img-fluid rounded-circle shadow mb-3" style="max-width: 150px;" />
                <h4>@Model.FirstName @Model.LastName</h4>
                <p class="text-muted">Student ID: @Model.ID</p>
            </div>

            <div class="col-md-8">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th>Email</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Phone Number</th>
                            <td>@Model.PhoneNum</td>
                        </tr>
                        <tr>
                            <th>Department</th>
                            <td>@Model.Department?.Name</td>
                        </tr>
                     
                    </tbody>
                </table>
            </div>
        </div>

        <hr />
        <h4 class="mt-4">My Courses</h4>

        @if (Model.Enrollments != null && Model.Enrollments.Any())
        {
            <table class="table table-striped mt-3">
                <thead>
                    <tr>
                        <th>Course ID</th>
                        <th>Course Name</th>
                        <th>Credits</th>
                        <th>Grade</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var enrollment in Model.Enrollments)
                    {
                        <tr>
                            <td>@enrollment.Course.ID</td>
                            <td>@enrollment.Course.Name</td>
                            <td>@enrollment.Course.CreditHours</td>
                            <td>@enrollment.Grade</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-muted mt-2">You are not enrolled in any courses yet.</p>
        }

        <div class="mt-3">
            <a asp-action="GetIDProfile" asp-route-id="@Model.ID" class="btn btn-primary">Edit Profile</a>
            <a asp-controller="Account" asp-action="AssignCourseToStudent" asp-route-id="@Model.ID" class="btn btn-primary">
                Assign Course
            </a>
            <a asp-action="Logout" class="btn btn-danger">Logout</a>
        </div>
    </div>
</div>
