@model universityManagementSys.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">

    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">Login</h1>
        <p class="text-muted">Access your account to manage your university profile.</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Form Card -->
    <div class="card shadow-lg border-0 rounded-3 mx-auto" style="max-width: 450px;">
        <div class="card-body p-4">

            <form asp-action="Login" asp-controller="Account" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>
                <input type="hidden" asp-antiforgery="true" />

                <!-- Username -->
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label fw-bold"></label>
                    <input asp-for="UserName" class="form-control rounded-pill" />
                    <span asp-validation-for="UserName" class="text-danger small"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-bold"></label>
                    <input asp-for="Password" type="password" class="form-control rounded-pill" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- Remember Me -->
                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" id="rememberMeCheck" />
                    <label asp-for="RememberMe" class="form-check-label" for="rememberMeCheck"></label>
                </div>

                <!-- Buttons -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary rounded-pill shadow-sm">
                        🚀 Login
                    </button>
                </div>
            </form>

            <!-- Register Redirect -->
            <div class="mt-4 text-center">
                <p class="mb-0">Don’t have an account?</p>
                <a asp-controller="Account" asp-action="Register"
                   class="btn btn-outline-success rounded-pill mt-2 px-4 shadow-sm">
                    📝 Register Now
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
