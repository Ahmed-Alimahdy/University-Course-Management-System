@model IEnumerable<universityManagementSys.ViewModel.UserWithRolesViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">👥 Manage Users</h1>
        <p class="text-muted">View, edit, assign roles, and manage users here.</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center fw-semibold rounded-pill shadow-sm">
            ✅ @TempData["Success"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger text-center fw-semibold rounded-pill shadow-sm">
            ⚠️ @TempData["Error"]
        </div>
    }

    <!-- Users Table -->
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <table class="table table-hover table-bordered align-middle text-center">
                <thead class="table-primary">
                    <tr>
                        <th>UserName</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th colspan="3">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Roles.Any())
                                {
                                    @string.Join(", ", user.Roles)
                                }
                                else
                                {
                                    <span class="text-muted">No role assigned</span>
                                }
                            </td>
                            <td>
                                <a asp-action="EditUser"
                                   asp-route-id="@user.UserId"
                                   class="btn btn-sm btn-outline-warning rounded-pill px-3">
                                    ✏️ Edit
                                </a>
                            </td>
                            <td>
                                <a asp-action="AssignRole"
                                   asp-route-userId="@user.UserId"
                                   class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                    🔑 Assign Role
                                </a>
                            </td>
                            <td>
                                <form asp-action="DeleteUser" asp-route-id="@user.UserId"
                                      method="post"
                                      onsubmit="return confirm('Are you sure you want to delete this user?');">
                                    <button type="submit"
                                            class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                        🗑️ Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Buttons Below Table -->
    <div class="text-center mt-4">
        <a asp-action="AdminDashBoard" asp-controller="Account"
           class="btn btn-outline-secondary px-4 py-2 rounded-pill shadow-sm">
            ⬅️ Back to Dashboard
        </a>
    </div>
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: #f1f7ff;
        }
    </style>
}
