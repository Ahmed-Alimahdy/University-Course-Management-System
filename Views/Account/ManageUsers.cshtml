@model IEnumerable<universityManagementSys.ViewModel.UserWithRolesViewModel>

@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <h2 class="mb-4">Manage Users</h2>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <table class="table table-bordered table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>UserName</th>
                <th>Email</th>
                <th>Roles</th>
                <th style="width: 220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        @if (user.Roles.Any())
                        {
                            @string.Join(", ", user.Roles)
                        }
                        else
                        {
                            <span class="text-muted">No role assigned</span>
                        }
                    </td>
                    <td>
                        <div class="d-flex flex-column gap-2">
                            <a asp-action="EditUser" asp-route-id="@user.UserId"
                               class="btn btn-sm btn-warning">
                                <i class="bi bi-pencil"></i> Edit
                            </a>

                            <a asp-action="AssignRole" asp-route-userId="@user.UserId"
                               class="btn btn-sm btn-primary">
                                <i class="bi bi-shield-lock"></i> Assign Role
                            </a>

                            <form asp-action="DeleteUser" asp-route-id="@user.UserId"
                                  method="post"
                                  onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <button type="submit" class="btn btn-sm btn-danger w-100">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Back to Dashboard Button -->
    <div class="mt-3">
        <a asp-action="AdminDashBoard" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Back to Dashboard
        </a>
    </div>
</div>
