@{
    ViewData["Title"] = "Search Students by Course";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h2 class="fw-bold text-primary">🎓 Search Students by Course</h2>
        <p class="text-muted">Enter a course ID to find all enrolled students.</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Search Form -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form asp-action="GetAllStudentsByCourseID" method="get" class="row g-2">
                <div class="col-md-9">
                    <input type="number" name="id" class="form-control shadow-sm" placeholder="Enter Course ID" required />
                </div>
                <div class="col-md-3 d-grid">
                    <button type="submit" class="btn btn-primary shadow-sm rounded-pill">
                        🔍 Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Error Message -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger shadow-sm">
            ⚠️ @TempData["Error"]
        </div>
    }
</div>
