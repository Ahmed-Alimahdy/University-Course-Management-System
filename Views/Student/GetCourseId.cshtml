<form asp-action="GetAllStudentsByCourseID" method="get" class="mb-3">
    <div class="input-group">
        <input type="number" name="id" class="form-control" placeholder="Enter Course ID" required />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}