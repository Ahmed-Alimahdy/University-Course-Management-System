@model universityManagementSys.Models.Student

@{
    ViewData["Title"] = "Student Details";
}
    <h2>Student Details</h2>
@if (Model != null)
{
  
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <td>@Model.ID</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.FirstName @Model.LastName</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Department</th>
            <td>@Model.Department?.Name</td> <!-- assuming Department has Name -->
        </tr>
    </table>

    <h3>Assigned Courses</h3>
    @if (Model.Enrollments != null && Model.Enrollments.Any())
    {
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Course ID</th>
                    <th>Course Name</th>
                    <th>Credit Hours</th>
                    <th>Instructor</th>
                    <th>Semester</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var enrollment in Model.Enrollments)
                {
                    <tr>
                        <td>@enrollment.Course.ID</td>
                        <td>@enrollment.Course.Name</td>
                        <td>@enrollment.Course.CreditHours</td>
                        <td>@(enrollment.Course.Instructor?.FirstName + " " + enrollment.Course.Instructor?.LastName)</td>
                        <td>@enrollment.Course.Semester?.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">This student has not been assigned to any course yet.</div>
    }

    <div class="mt-3">
        <a asp-action="GetAllStudents" class="btn btn-secondary">Back to List</a>
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger">Delete</a>
        <a asp-action="AssignCourseToStudent" asp-route-id="@Model.ID" class="btn btn-success">Assign New Course</a>
    </div>
}
else
{
    <div class="alert alert-warning mt-4">
        <h4>No Student Found</h4>
        <p>There is no student with the specified ID.</p>
    </div>

    <a asp-action="GetAllStudents" class="btn btn-secondary mt-3">
        Back to Students List
    </a>
}
