@model List<universityManagementSys.Models.Student>

@{
    ViewData["Title"] = "Students List";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">🎓 Students List</h1>
        <p class="text-muted">Manage all students in the system.</p>
        <hr class="w-25 mx-auto" />
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center shadow-sm">
            @ViewBag.NoDataMessage ?? "No students available."
        </div>
    }
    else
    {
        <div class="card shadow-lg border-0">
            <div class="card-body">
                <table class="table table-hover table-bordered align-middle text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>ID</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Department</th>
                            <th colspan="3">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.ID</td>
                                <td>@student.FirstName</td>
                                <td>@student.LastName</td>
                                <td>@student.Email</td>
                                <td>@student.PhoneNum</td>
                                <td>@student.Department?.Name</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@student.ID"
                                       class="btn btn-sm btn-outline-primary rounded-pill px-3">
                                        ✏️ Edit
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="Delete" asp-route-id="@student.ID"
                                       class="btn btn-sm btn-outline-danger rounded-pill px-3">
                                        🗑️ Delete
                                    </a>
                                </td>
                                <td>
                                    <a asp-action="GetStudentByID" asp-route-id="@student.ID"
                                       class="btn btn-sm btn-outline-success rounded-pill px-3">
                                        👁️ Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    <!-- Buttons Below Table -->
    <div class="text-center mt-4">
        <a asp-action="Create" asp-controller="Student"
           class="btn btn-success px-4 py-2 rounded-pill shadow-sm me-3">
            ➕ Add Student
        </a>

        <a asp-action="GetCourse" asp-controller="Student"
           class="btn btn-warning px-4 py-2 rounded-pill shadow-sm me-3">
            🔍 Search by Course ID
        </a>

        <a asp-action="AdminDashBoard" asp-controller="Account"
           class="btn btn-outline-secondary px-4 py-2 rounded-pill shadow-sm">
            ⬅️ Back to Dashboard
        </a>
    </div>

</div>



@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: #f1f7ff;
        }
    </style>
}
