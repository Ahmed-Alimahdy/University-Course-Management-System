@model universityManagementSys.ModelView.dataViewModel

@{
    ViewData["Title"] = Model.PageTitle;
}

<h2>@Model.PageTitle</h2>
<p>@Model.WelcomeMessage</p>
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="card p-3 shadow-sm">
    <h4>Student Info</h4>
    <p><strong>ID:</strong> @Model.student.ID</p>
    <p><strong>Name:</strong> @Model.student.FirstName @Model.student.LastName</p>
</div>

<br />

<form asp-action="AssignCourseToStudentPost" method="post">
    <input type="hidden" name="StudentID" value="@Model.student.ID" />

    <div class="form-group">
        <label for="CourseID">Select Course</label>
        <select id="CourseID" name="CourseID" class="form-control" asp-items="ViewBag.Courses">
            <option value="">-- Select Course --</option>
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Assign</button>
    <a asp-action="GetAllStudents" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
