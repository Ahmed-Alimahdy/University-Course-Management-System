@model universityManagementSys.ModelView.dataViewModel

@{
    ViewData["Title"] = Model.PageTitle;
}

<div class="container mt-4">
    <!-- Page Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">🎓 @Model.PageTitle</h1>
        <p class="text-muted">@Model.WelcomeMessage</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Error Message -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger shadow-sm">
            ⚠️ @TempData["Error"]
        </div>
    }

    <!-- Student Info Card -->
    <div class="card shadow-lg border-0 mb-4">
        <div class="card-header bg-light fw-semibold">
            🧑 Student Info
        </div>
        <div class="card-body">
            <p><strong>ID:</strong> @Model.student.ID</p>
            <p><strong>Name:</strong> @Model.student.FirstName @Model.student.LastName</p>
        </div>
    </div>

    <!-- Course Assignment Form -->
    <div class="card shadow-lg border-0">
        <div class="card-header bg-light fw-semibold">
            📚 Assign Course
        </div>
        <div class="card-body">
            <form asp-action="AssignCourseToStudentPost" method="post">
                <input type="hidden" name="StudentID" value="@Model.student.ID" />

                <div class="mb-3">
                    <label for="CourseID" class="form-label fw-semibold">Select Course</label>
                    <select id="CourseID" name="CourseID" class="form-select shadow-sm" asp-items="ViewBag.Courses">
                        <option value="">-- Select Course --</option>
                    </select>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="GetAllStudents" class="btn btn-outline-secondary px-4 rounded-pill shadow-sm">
                        ⬅️ Cancel
                    </a>
                    <button type="submit" class="btn btn-success px-4 rounded-pill shadow-sm">
                        ✅ Assign Course
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
