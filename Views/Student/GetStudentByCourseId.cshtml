@model universityManagementSys.ModelView.ViewModel

@{
    ViewData["Title"] = "Students in Course";
}

<h2>Students in Course</h2>

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <h4 class="card-title">@Model.course.Name</h4>
        <p class="card-text"><strong>Description:</strong> @Model.course.Description</p>
        <p class="card-text"><strong>Credit Hours:</strong> @Model.course.CreditHours</p>
        <p class="card-text">
            <strong>Instructor:</strong>
            @(Model.course.Instructor?.FirstName + " " + Model.course.Instructor?.LastName)
        </p>
        <p class="card-text"><strong>Semester:</strong> @Model.course.Semester?.Name</p>
    </div>
</div>


@if (Model.students != null && Model.students.Any())
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model.students)
            {
                <tr>
                    <td>@student.ID</td>
                    <td>@student.FirstName @student.LastName</td>
                    <td>@student.Email</td>
                    <td>@student.Department?.Name</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@student.ID"
                           class="btn btn-danger btn-sm">
                            Delete
                        </a>

                        <a asp-action="Edit" asp-route-id="@student.ID"
                           class="btn btn-primary btn-sm">
                            Edit
                        </a>


                        <a asp-action="GetStudentById" asp-route-id="@student.ID"
                           class="btn btn-success btn-sm">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">
        No students are assigned to this course.
    </div>
}

<div class="mt-3">
    <a asp-action="GetAllStudents" class="btn btn-secondary">Back to Students</a>
</div>
