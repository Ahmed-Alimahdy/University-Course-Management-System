@model IEnumerable<universityManagementSys.Models.Student>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.FirstName</td>
                    <td>@student.LastName</td>
                    <td>@student.Email</td>
                    <td>@student.PhoneNum</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-danger">No students found for this course.</td>
            </tr>
        }
    </tbody>
</table>