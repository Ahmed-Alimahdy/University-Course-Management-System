@model universityManagementSys.Models.Instructor

@{
    ViewData["Title"] = "Delete Instructor";
}

<div class="container mt-5">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-danger">🗑️ Delete Instructor</h1>
        <p class="text-muted">Are you sure you want to delete this instructor?</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Card -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body p-4">
                    <dl class="row">
                        <dt class="col-sm-4">ID</dt>
                        <dd class="col-sm-8">@Model.ID</dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>

                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Hire Date</dt>
                        <dd class="col-sm-8">@Model.HireDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Model.PhoneNum</dd>
                    </dl>

                    <form asp-action="DeleteInstructorConfirmed" method="post">
                        <input type="hidden" asp-for="ID" />
                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="GetAllInstructors"
                               class="btn btn-outline-secondary px-4 rounded-pill shadow-sm">
                                ⬅️ Cancel
                            </a>
                            <button type="submit" class="btn btn-danger px-4 rounded-pill shadow-sm">
                                🗑️ Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
