@model List<Instructor>
@{
    ViewData["Title"] = "All Instructors";
}
<h2>@ViewData["Title"]</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning">
        @ViewBag.NoDataMessage ?? "No Instructors available."
    </div>
}
else
{
    <table class="table table-striped table-bordered">
    <thead>
        <tr>
			<th>ID</th>
            <th>FirstName</th>
            <th>LastName</th>
			<th>Email</th>
			<th>PhoneNum</th>
            <th>HireDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var instructor in Model)
        {
            <tr>
				<td>@instructor.ID</td>
                <td>@instructor.FirstName</td>
				<td>@instructor.LastName</td>
				<td>@instructor.Email</td>
				<td>@instructor.PhoneNum</td>
				<td>@instructor.HireDate.ToString("yyyy-MM-dd")</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@instructor.ID">Edit</a>
                    <td/>
                    <td>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@instructor.ID">Delete</a>
                </td>
            </tr>

        }
    </tbody>
   </table>
   }