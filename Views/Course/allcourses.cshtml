@model List<Course>

@{
    ViewData["Title"] = "All Courses";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary">📘 All Courses</h1>
        <p class="text-muted">View, manage, and update courses here.</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Courses Table -->
    <div class="card shadow-lg border-0">
        <div class="card-body">
            <table class="table table-hover table-bordered align-middle text-center">
                <thead class="table-primary">
                    <tr>
                        <th>Course ID</th>
                        <th>Course Name</th>
                        <th>Course Description</th>
                        <th colspan="2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.ID</td>
                            <td>@course.Name</td>
                            <td>@course.Description</td>
                            <td>
                                <a class="btn btn-sm btn-outline-primary rounded-pill px-3"
                                   asp-action="Edit" asp-route-id="@course.ID">
                                    Edit
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-sm btn-outline-danger rounded-pill px-3"
                                   asp-action="Delete" asp-route-id="@course.ID">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Buttons Below Table -->
    <div class="text-center mt-4">
        <a asp-action="Create" asp-controller="Course"
           class="btn btn-success px-4 py-2 rounded-pill shadow-sm me-3">
            ➕ Add Course
        </a>

        <a asp-action="AdminDashBoard" asp-controller="Account"
           class="btn btn-outline-secondary px-4 py-2 rounded-pill shadow-sm">
            ⬅️ Back to Dashboard
        </a>
    </div>
</div>

@section Styles {
    <style>
        .table-hover tbody tr:hover {
            background-color: #f1f7ff;
        }
    </style>
}
