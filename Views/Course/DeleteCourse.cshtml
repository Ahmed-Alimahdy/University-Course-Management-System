@model universityManagementSys.Models.Course

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold text-danger">🗑️ Delete Course</h1>
        <p class="text-muted">Are you sure you want to delete this course?</p>
        <hr class="w-25 mx-auto" />
    </div>

    <!-- Card -->
    <div class="card shadow-lg border-0">
        <div class="card-body p-4">
            <dl class="row">
                <dt class="col-sm-3 fw-semibold">ID</dt>
                <dd class="col-sm-9">@Model.ID</dd>

                <dt class="col-sm-3 fw-semibold">Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3 fw-semibold">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 fw-semibold">Credit Hours</dt>
                <dd class="col-sm-9">@Model.CreditHours</dd>

                <dt class="col-sm-3 fw-semibold">Instructor</dt>
                <dd class="col-sm-9">@Model.Instructor?.FirstName @Model.Instructor?.LastName</dd>

                <dt class="col-sm-3 fw-semibold">Semester</dt>
                <dd class="col-sm-9">@Model.Semester?.Name</dd>
            </dl>

            <!-- Action buttons -->
            <form asp-action="DeleteCourseConfirmed" method="post" class="mt-4">
                <input type="hidden" asp-for="ID" />
                <div class="d-flex justify-content-between">
                    <a asp-action="GetAllCourses"
                       class="btn btn-outline-secondary px-4 rounded-pill shadow-sm">
                        ⬅️ Cancel
                    </a>
                    <button type="submit"
                            class="btn btn-danger px-4 rounded-pill shadow-sm">
                        🗑️ Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
